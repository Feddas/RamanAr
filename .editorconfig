# The purpose of .editorconfig files are explained on https://docs.microsoft.com/en-us/visualstudio/ide/create-portable-custom-editor-options

# If the .editorconfig file fails us, we can try manual methods. Such as adding IDE buttons: http://therightstuff.de/2010/01/24/Visual-Studio-Tip-Setting-Indent-Width-And-TabsSpaces-Quickly-Using-Macros.aspx

# top-most EditorConfig file
root = true

# windows-style newlines with a newline ending every file
[*]
end_of_line = crlf 
trim_trailing_whitespace = true
insert_final_newline = true

# enforce C# standard style https://fb.workplace.com/groups/261963884317118/permalink/623946801452156/
[*.cs]
indent_style = space
indent_size = 4
csharp_new_line_before_open_brace = all
csharp_space_after_keywords_in_control_flow_statements = true
